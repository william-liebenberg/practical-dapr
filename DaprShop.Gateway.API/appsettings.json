{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
			"Microsoft.AspNetCore": "Warning",
			"Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ApiRoutes": [
		{
			"RouteName": "ShoppingCartService",
			"ClusterName": "cart-api",
			"RoutePrefix": "cart",
			"HostUrl": "https://localhost:7283",
			"OpenApiSpecUrl": "api/v1/specification.json"
		},
		{
			"RouteName": "ProductsService",
			"ClusterName": "products-api",
			"RoutePrefix": "products",
			"HostUrl": "https://localhost:7084",
			"OpenApiSpecUrl": "api/v1/specification.json"
		},
		{
			"RouteName": "OrderingService",
			"ClusterName": "orders-api",
			"RoutePrefix": "orders",
			"HostUrl": "https://localhost:7233",
			"OpenApiSpecUrl": "api/v1/specification.json"
		},
		{
			"RouteName": "UserManagementService",
			"ClusterName": "users-api",
			"RoutePrefix": "users",
			"HostUrl": "https://localhost:7108",
			"OpenApiSpecUrl": "api/v1/specification.json"
		},
		{
			"RouteName": "NotificationsService",
			"ClusterName": "notifications-api",
			"RoutePrefix": "notifications",
			"HostUrl": "https://localhost:7196",
			"OpenApiSpecUrl": "api/v1/specification.json"
		}
  ],
  "DaprReverseProxy": {
    "Routes": {
      "users-api": {
        "ClusterId": "daprSidecar",
        "Transforms": [
          {
            "RequestHeader": "dapr-app-id",
            "Append": "users-api"
          }
        ],
        "Match": {
          "Path": "/users/{*any}"
        }
      },
      "orders-api": {
        "ClusterId": "daprSidecar",
        "Transforms": [
          {
            "RequestHeader": "dapr-app-id",
            "Append": "orders-api"
          }
        ],
        "Match": {
          "Path": "/orders/{*any}"
        }
      },
      "products-api": {
        "ClusterId": "daprSidecar",
        "Transforms": [
          {
            "RequestHeader": "dapr-app-id",
            "Append": "products-api"
          }
        ],
        "Match": {
          "Path": "/products/{*any}"
        }
      },
      "cart-api": {
        "ClusterId": "daprSidecar",
        "Transforms": [
          {
            "RequestHeader": "dapr-app-id",
            "Append": "cart-api"
          }
        ],
        "Match": {
          "Path": "/cart/{*any}"
        }
      }
    },
    "Clusters": {
      "daprSidecar": {
        "Destinations": {
					"sidecar": {
						"Address": "http://localhost:3500/v1.0/invoke"
					}
        }
      }
    }
  }
}